<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.oneappy.oneappyapp"
        versionCode = "3"
        version     = "3.1.1">

    <name>One Appy</name>

    <description>
       One Appy Hotel edition
    </description>

    <author href="http://www.everit.gr" email="info@everit.gr">
       WE/A/C design and development, production by Everit
    </author>

 	<preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />

	<gap:plugin name="com.phonegap.plugins.barcodescanner" version="2.2.0" />

	<gap:plugin name="org.apache.cordova.file" version="1.3.1" />

	<gap:plugin name="org.apache.cordova.file-transfer" version="0.4.6" />



	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
   <!-- <feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/file-transfer"/>-->
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

	<feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
	</feature>

	<feature name="File">
    <param name="android-package" value="org.apache.cordova.file.FileUtils" />
	</feature>
	<feature name="FileTransfer">
    <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
	</feature>



    <!-- you can use any density that exists in the Android project -->
   <icon src="images/splash/onappy144.png" />

    <platform name="android">
              <icon src="images/splash/onappy32.png" density="ldpi" />
              <icon src="images/splash/onappy48.png" density="mdpi" />
              <icon src="images/splash/onappy72.png" density="hdpi" />
              <icon src="images/splash/onappy96.png" density="xhdpi" />
			  <icon src="images/splash/onappy144.png" density="xxhdpi" />
     </platform>


  	<gap:splash src="splash.png" />



<preference name="SplashScreenDelay" value="3000" />
<preference name="android-minSdkVersion" value="14" />


</widget>
